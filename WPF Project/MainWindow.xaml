<Window x:Class="WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <TextBox Name="Textbox1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" Height="30" Width="340" MaxLength="16" PreviewTextInput="Textbox1_PreviewTextInput"/>

        <Button Content="Send Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,15,0,0" Width="160" Height="30" Click="SendDataButton_Click"/>
        <Button Content="Receive Data" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,105,0,0" Width="160" Height="30" Click="ReceiveDataButton_Click"/>


        <TextBox Name="Textbox2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,110,0,0" Height="30" Width="340" IsReadOnly="True"/>


    </Grid>
</Window>
